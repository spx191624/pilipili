<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nataya.pilipili.activity.LoginActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FB7299"
        android:minHeight="?attr/actionBarSize"
        app:layout_scrollFlags="scroll|enterAlways">

        <LinearLayout

            android:id="@+id/navigation_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_tool2"
                android:paddingLeft="5dp"
                android:textColor="#FFFFFF"
                android:text="登录"
                android:textSize="15sp" />
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/forget_pwd"
                android:layout_marginRight="5dp"
                android:text="忘记密码？"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>



        </LinearLayout>

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EAEAEA">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/ic22"
                android:src="@drawable/ic_22"
                android:layout_width="wrap_content"
                android:layout_height="80dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:src="@drawable/ic_bili_logo"
                android:layout_width="wrap_content"
                android:layout_height="80dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/ic33"
                android:src="@drawable/ic_33"
                android:layout_width="wrap_content"
                android:layout_height="80dp" />
        </LinearLayout>
        <EditText
            android:textColor="#99000000"
            android:textSize="15sp"
            android:hint="你的手机号/邮箱"
            android:layout_marginLeft="20dp"
            android:drawablePadding="10dp"
            android:id="@+id/username"
            android:drawableLeft="@drawable/ic_login_username_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorLink="#FB7299"/>
        <EditText
            android:textColor="#99000000"
            android:textSize="15sp"
            android:hint="请输入密码"
            android:layout_marginLeft="20dp"
            android:drawablePadding="10dp"
            android:id="@+id/pwd"
            android:drawableLeft="@drawable/ic_login_password_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorLink="#FB7299"/>
        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:background="@drawable/zhuce"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="#FB7299"
                android:id="@+id/zhuce"
                android:text="注册账号"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:background="@drawable/denglu"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textSize="13sp"
                android:textColor="#FFFFFF"
                android:id="@+id/login"
                android:text="登录"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>






    </LinearLayout>
</LinearLayout>
