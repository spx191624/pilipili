<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="#EAEAEA"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_num_item_yuanchuang"
        android:layout_width="40dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:singleLine="true"
        android:text="1"
        android:textColor="#FB7299"
        android:textSize="32sp" />

    <ImageView
        android:id="@+id/iv_item_yuanchuang"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:padding="5dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tv_title_item_yuanchuang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_uper_item_yuanchuang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_category_up"
            android:textColor="#44000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_pingfen_item_yuanchuang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#44000000"
            android:textSize="12sp" />


    </LinearLayout>

</LinearLayout>