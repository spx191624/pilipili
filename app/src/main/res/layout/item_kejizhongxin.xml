<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#EAEAEA"
    android:layout_margin="20dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="25dp">
        <ImageView
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_header_activity_center"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_gravity="center"
            android:textColor="#000000"
            android:gravity="center"
            android:id="@+id/tv_item_recycle_zhibo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="    活动中心"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />


        <TextView
            android:background="@drawable/shape_jinqukankan"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:textColor="#FFFFFF"
            android:id="@+id/tv_renshu_recycle_zhibo"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="进去看看"
            />



    </LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_margin="10dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/iv_kejizhongxin_1"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:textColor="#000000"
                android:id="@+id/tv_kejizhongxin1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/iv_kejizhongxin_2"/>
            <TextView
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:id="@+id/tv_kejizhongxin2"/>

        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/iv_kejizhongxin_3"/>
            <TextView
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="15sp"
                android:id="@+id/tv_kejizhongxin3"/>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>