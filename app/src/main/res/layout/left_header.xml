<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FB7299">
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/bili_default_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_left_head"/>

    <ImageView
        android:background="@drawable/bili_drawerbg_not_logined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_left_back"

        android:layout_gravity="right|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="点击头像登陆"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_left_head"
        android:padding="10dp"
        android:layout_below="@+id/iv_left_head"
        android:layout_alignParentStart="true" />

    <ImageView
        android:src="@drawable/ic_switch_night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_left_moshi"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>