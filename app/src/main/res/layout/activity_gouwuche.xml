<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_gouwuche"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:orientation="vertical"
    tools:context="nataya.pilipili.activity.GouwucheActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FB7299"
            android:minHeight="?attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways">

            <LinearLayout

                android:id="@+id/navigation_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_back_huodong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha" />

                <TextView
                    android:text="购物车"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/iv_tool2"
                    android:paddingLeft="5dp"
                    android:id="@+id/tv_title_web"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/iv_more_web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/ic_menu_moreoverflow" />


            </LinearLayout>
        </android.support.v7.widget.Toolbar>

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="180dp"></com.youth.banner.Banner>

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/quanbu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/backtag"
            android:button="@null"
            android:gravity="center"
            android:text="全部"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/zhoubian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/backtag"
            android:button="@null"
            android:gravity="center"
            android:text="3C周边"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/baozhen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/backtag"
            android:button="@null"
            android:gravity="center"
            android:text="抱枕萌物"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/meng100"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/backtag"
            android:button="@null"
            android:gravity="center"
            android:text="梦100周边"
            android:textColor="#FFFFFF" />

        <RadioButton
            android:id="@+id/guanfangtaobao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/backtag"
            android:button="@null"
            android:gravity="center"
            android:text="官方淘宝店"
            android:textColor="#FFFFFF" />

    </RadioGroup>

    <nataya.pilipili.utils.MyGridView
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:id="@+id/gv_shop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"></nataya.pilipili.utils.MyGridView>
    </LinearLayout>



</android.support.v4.widget.NestedScrollView>
